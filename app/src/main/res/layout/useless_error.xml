<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/north"
        android:layout_width="@dimen/error_size"
        android:layout_height="@dimen/error_size"
        android:rotation="180"
        android:src="@drawable/ic_android"
        android:translationY="@dimen/error_size_reverse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/east"
        android:layout_width="@dimen/error_size"
        android:layout_height="@dimen/error_size"
        android:rotation="-90"
        android:src="@drawable/ic_android"
        android:translationX="@dimen/error_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/west"
        android:layout_width="@dimen/error_size"
        android:layout_height="@dimen/error_size"
        android:rotation="90"
        android:src="@drawable/ic_android"
        android:translationX="@dimen/error_size_reverse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>