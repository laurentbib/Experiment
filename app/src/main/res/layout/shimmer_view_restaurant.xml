<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    android:background="@drawable/background_rounded_light">

    <View
        android:id="@+id/shimmer_restaurant_img"
        android:layout_width="0dp"
        android:layout_height="@dimen/restaurant_view_height"
        android:background="@drawable/background_shimmer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shimmer_restaurant_info_background"
        android:layout_width="0dp"
        android:layout_height="@dimen/restaurant_view_background_height"
        android:background="@drawable/background_slider"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_restaurant_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/shimmer_restaurant_logo_container"
        android:layout_width="@dimen/restaurant_view_thumbnail_width"
        android:layout_height="@dimen/restaurant_view_thumbnail_height"
        android:background="@drawable/background_rounded_light"
        android:padding="@dimen/default_padding"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_restaurant_info_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/shimmer_restaurant_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/background_shimmer_view"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_restaurant_logo_container"
        app:layout_constraintEnd_toEndOf="@+id/shimmer_restaurant_logo_container"
        app:layout_constraintStart_toStartOf="@+id/shimmer_restaurant_logo_container"
        app:layout_constraintTop_toTopOf="@+id/shimmer_restaurant_logo_container" />

    <View
        android:id="@+id/shimmer_restaurant_name"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/background_shimmer_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_restaurant_info_background" />

    <View
        android:id="@+id/shimmer_restaurant_location"
        android:layout_width="100dp"
        android:layout_height="16dp"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/background_shimmer_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_restaurant_name" />

</androidx.constraintlayout.widget.ConstraintLayout>